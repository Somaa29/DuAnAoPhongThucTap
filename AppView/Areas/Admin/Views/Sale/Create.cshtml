@model AppData.Entities.Models.Sale

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<link href="~/css/layout/adminlte.min.css" rel="stylesheet" />
<link href="~/css/layout/fontawesome/all.min.css" rel="stylesheet" />
<section class="content">
    <div class="">
        <div class="">
            <form action="~/Admin/Sale/Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" enctype="multipart/form-data"></div>
                @* <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
                </div>*@
                <div class="form-group">
                    <div class="row">
                        <label for="MaSale" class="control-label col-md-3">Mã Sale:</label>
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.MaSale, new { @class = "form-control" })
                        <span asp-validation-for="MaSale" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <label for="NgayBatDau" class="control-label col-md-3">Ngày Bắt Đầu</label>
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.NgayBatDau, new {type = "datetime" , @class = "form-control" })

                        <span asp-validation-for="NgayBatDau" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <label for="NgayKetThuc" class="control-label col-md-3">Ngày Kết Thúc</label>
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.NgayKetThuc, new {type = "datetime" , @class = "form-control" })

                        <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <label for="PhanTramGiam" class="control-label col-md-3">Phần Trăm Giảm: </label>
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.PhanTramGiam, new { @class = "form-control" })
                        <span asp-validation-for="PhanTramGiam" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <label for="TrangThai" class="control-label col-md-3">Trạng Thái: </label>
                    </div>
                    <div class="col-md-9">
                        @Html.TextBoxFor(m => m.TrangThai, new { @class = "form-control" })
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</section>
<script src="~/js/layout/jquery.min.js"></script>
<script src="~/js/layout/bootstrap.bundle.min.js"></script>
<script src="~/js/layout/adminlte.js"></script>

