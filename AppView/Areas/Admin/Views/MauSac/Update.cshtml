@model AppData.Entities.Models.MauSac

@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Update</h1>

<h4>MauSac</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="~/Admin/MauSac/Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TenMauSac" class="control-label"></label>
                @Html.TextBoxFor(m => m.TenMauSac, new { @class = "form-control" })
