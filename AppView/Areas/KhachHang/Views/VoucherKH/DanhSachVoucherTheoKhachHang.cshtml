@model IEnumerable<AppData.Entities.ViewModels.VoucherDetailViewModel>

@{
    ViewData["Title"] = "DanhSachVoucherTheoKhachHang";
    Layout = "~/Areas/KhachHang/Views/Shared/_Layout.cshtml";
}

<link href="~/css/layout/layout.css" rel="stylesheet" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<style>
    .container {
        width:1320px;
        margin:auto;
    }
    .card {
        margin: 50px;
    }
    .img-voucher , card-body{
        margin-top: 5px;
    }
</style>
<div class="container">
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="card col-md-6" style="max-width: 540px;">
             <div class="row">
                <div class="col-md-4">
                  <img class="img-voucher" src="https://cf.shopee.vn/file/e6a3b7beffa95ca492926978d5235f79" style="background-color:#ee4d2d"/>
                </div>
                <div class="col-md-8">
                  <div class="card-body">
                    <h5 class="card-title">@item.MaVoucher</h5>
                    <p class="card-text">Giảm giá đến @item.GiaTriVoucher% trên hóa đơn.</p>
                    <p style="margin-top: 10px;">Hạn sử dụng</p>
                    <p class="card-text"><small class="text-muted"><i class="far fa-clock"></i> @item.NgayBatDau - <i class="far fa-clock"></i> @item.NgayKetThuc</small></p>
                    <a href="@Url.Action("VoucherTheoIdVoucher","VoucherKH" , new {idvoucherdetail = item.ID})">Điều kiện</a>                
                  </div>
                </div>
             </div>
          </div>
        }
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th style="display:none;">
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th style="display:none;">
                @Html.DisplayNameFor(model => model.IDVoucher)
            </th>
            <th style="display:none;">
                @Html.DisplayNameFor(model => model.IDNguoiDung)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaVoucher)
            </th>
            <th>
                Ngày bắt đầu
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NgayKetThuc)
            </th>
            <th style="display:none;">
                @Html.DisplayNameFor(model => model.GiaTriVoucher)
            </th>
            <th style="display:none;">
                @Html.DisplayNameFor(model => model.DieuKienMin)
            </th style="display:none;">
            <th>
                @Html.DisplayNameFor(model => model.DieuKienMax)
            </th>
            <th>
                Số lượng
            </th>
            <th style="display:none;">
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th>
                Trạng thái
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td style="display:none;">
                @Html.DisplayFor(modelItem => item.ID)
            </td>
                <td style="display:none;">
                @Html.DisplayFor(modelItem => item.IDVoucher)
            </td>
                <td style="display:none;">
                @Html.DisplayFor(modelItem => item.IDNguoiDung)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaVoucher)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayBatDau)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NgayKetThuc)
            </td>
                <td style="display:none;">
                @Html.DisplayFor(modelItem => item.GiaTriVoucher)
            </td>
                <td style="display:none;">
                @Html.DisplayFor(modelItem => item.DieuKienMin)
            </td>
                <td style="display:none;">
                @Html.DisplayFor(modelItem => item.DieuKienMax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
                <td style="display:none;">
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrangThai)
            </td>
        </tr>
}
    </tbody>
</table>
<script>

</script>