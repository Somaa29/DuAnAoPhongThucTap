@model AppData.Entities.Models.NguoiDung

@{
    ViewData["Title"] = "DangKyKhachHang";
    string mess = ViewBag.error;
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
<link href="~/css/layout/adminlte.min.css" rel="stylesheet" />
<link href="~/css/layout/fontawesome/all.min.css" rel="stylesheet" />
<style>
    #colorlib-footer {
        display: none;
    }

    nav.colorlib-nav {
        display: none;
    }
    header {
        display: none;
    }

    .colorlib-intro {
        display: none;
    }
    ul.slides {
        display: none;
    }

    .colorlib-product {
        display: none;
    }

    aside#colorlib-hero {
        display: none;
    }

    .colorlib-partner {
        display: none;
    }

    form#form-dangky {
        width: 600px;
        margin: auto;
        margin-top: 20px;
        border: 1px solid;
        border-radius: 10px;
        padding: 10px;
    }

    input.btn.btn-primary {
        width: 100px;
        height: 45px;
        font-size: 20px;
        margin: auto;
        margin-left: 41%;
    }

    .col-md-4 {
        line-height: 37px;
        padding-left: 30px;
    }
</style>

<div class="row">
    <span>@mess</span>
    <form asp-action="DangKyKhachHang" id="form-dangky" class="form-dangky">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @* <div class="form-group">
        <label asp-for="Id" class="control-label"></label>
        <input asp-for="Id" class="form-control" />
        <span asp-validation-for="Id" class="text-danger"></span>
        </div>*@
        <h4 style="text-align: center;margin-top: 25px;">Đăng ký trở thành thành viên</h4>
        <br />
        <h4 style="text-align: center;margin-top: -26px;margin-bottom: 38px;color: #88c8bc; font-weight: bold;font-family: fantasy;letter-spacing: 10px;line-height: 264%;">
            6S SNEAKER
        </h4>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">Tên người dùng: </label> (<span style="color:red">*</span>)
                </div>
                <div class="col-md-8">
                    <input asp-for="TenNguoiDung" class="form-control" />
                    <span asp-validation-for="TenNguoiDung" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">Ngày sinh: </label>(<span style="color:red">*</span>)
                </div>
                <div class="col-md-8">
                    <input asp-for="NgaySinh" type="date" class="form-control" />
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>
            </div>
        </div>
        @*<div class="form-group">
        <label asp-for="IdChucVu" class="control-label"></label>
        <input asp-for="IdChucVu" class="form-control" />
        <span asp-validation-for="IdChucVu" class="text-danger"></span>
        </div>*@
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">Ảnh: </label>
                </div>
                <div class="col-md-8">
                    <input asp-for="Anh" type="file" class="form-control" />
                    <span asp-validation-for="Anh" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">Số điện thoại: </label>(<span style="color:red">*</span>)
                </div>
                <div class="col-md-8">
                    <input asp-for="SDT" class="form-control" />
                    <span asp-validation-for="SDT" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">Email: </label>(<span style="color:red">*</span>)
                </div>
                <div class="col-md-8">
                    <input asp-for="Email" type="email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">Mật khẩu: </label>(<span style="color:red">*</span>)
                </div>
                <div class="col-md-8">
                    <input asp-for="MatKhau" type="password" class="form-control" />
                    <span asp-validation-for="MatKhau" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">Tỉnh/Thành phố:</label>
                </div>
                <div class="col-md-8">
                    <input asp-for="TinhThanh" class="form-control" />
                    <span asp-validation-for="TinhThanh" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">Quận/Huyện: </label>
                </div>
                <div class="col-md-8">
                    <input asp-for="QuanHuyen" class="form-control" />
                    <span asp-validation-for="QuanHuyen" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">Phường/Xã: </label>
                </div>
                <div class="col-md-8">
                    <input asp-for="PhuongXa" class="form-control" />
                    <span asp-validation-for="PhuongXa" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-md-4">
                    <label class="control-label">Địa chỉ: </label>
                </div>
                <div class="col-md-8">
                    <input asp-for="DiaChi" class="form-control" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
            </div>
        </div>
        @*<div class="form-group">
        <label asp-for="TrangThai" class="control-label"></label>
        <input asp-for="TrangThai" class="form-control" />
        <span asp-validation-for="TrangThai" class="text-danger"></span>
        </div>*@
        <div class="form-group">
            <input type="submit" value="Đăng ký" class="btn btn-primary" />
        </div>
    </form>

</div>
<!-- Bootstrap 4 -->
<script src="~/js/layout/main.js"></script>

