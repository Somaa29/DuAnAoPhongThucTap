@model AppData.Entities.ViewModels.ImageUploadModel

@{
    ViewData["Title"] = "UploadImages";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<form asp-action="UploadImages" asp-controller="QuanTri" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="imageFiles">Chọn ảnh:</label>
        <input type="file" name="imageFiles" id="imageFiles" multiple />
    </div>
    <div class="form-group">
        <input type="submit" value="Tải lên" class="btn btn-primary" />
    </div>
</form>

@if (ViewData.ModelState.IsValid)
{
    <p class="text-success">Tải lên thành công!</p>
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="text-danger">
        <ul>
            @foreach (var key in ViewData.ModelState.Keys)
            {
                foreach (var error in ViewData.ModelState[key].Errors)
                {
                    <li>@error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}


