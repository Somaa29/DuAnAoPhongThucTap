@model IEnumerable<AppData.Entities.Models.HoaDon>

@{
    ViewData["Title"] = "DanhSachHoaDon";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<style>
    .pagination {
        display: flex;
        list-style-type: none;
        padding: 0;
    }

        .pagination li {
            margin-right: 5px;
        }

            .pagination li a {
                text-decoration: none;
                padding: 5px 10px;
                border: 1px solid #ccc;
                border-radius: 3px;
                background-color: #f9f9f9;
            }

                .pagination li a.active {
                    background-color: #007bff;
                    color: #fff;
                }
</style>
<div class="row" style="margin: 10px;">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-8">
                <input type="text" id="tukhoa" name="tukhoa" placeholder="Từ khóa" style="height : 40px; width: 90%; border-radius:10px" />
            </div>
            <div class="col-md-4">
                <button onclick="DanhSachHoaDonTheoTuKhoa();" class="btn btn-primary" style="border-radius:5px; margin-left: 5px;">Search</button>
            </div>
        </div>
    </div>
    @*Lọc theo trạng thái*@
    <div class="col-md-4">
        <div class="row">
            <label class="control-label col-md-4">Trạng thái: </label>
            <div class="col-md-8">
                <select id="trangthaiFilter" name="trangthaiFilter" class="form-control">
                    <option value="-1">Tất cả</option>
                    <option value="0">Không hoạt động</option>
                    <option value="1">Đang xử lý</option>
                    <option value="2">Hóa đơn chờ</option>
                    <option value="3">Đã thanh toán chờ xác nhận</option>
                    <option value="4">Giao hàng thành công</option>
                    <option value="5">Đang giao</option>
                    <option value="6">Hủy</option>
                    <option value="8">Hoàn hàng</option>
                    <option value="9">Xác nhận hoàn hàng</option>
                </select>
            </div>
        </div>
    </div>
</div>
<table class="table table-bordered" style="margin: 10px;" id="dataTable">
    <thead>
        <tr>
            <th style="display:none;">
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                Mã hóa đơn
            </th>
            <th>
                Ngày tạo
            </th>
            <th>
                Tên khách hàng
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Tổng tiền
            </th>
            <th>
                Trạng thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody id="DanhSachHoaDonjson">
    </tbody>
</table>
<div class="row" style="margin-top:1%;">
    <div class="col-md-6"> </div>
    <div class="col-md-6">
        <ul class="pagination" id="pagination"></ul>
    </div>
</div>
<script type="text/javascript" src="~/js/layout/jquery.min.js"></script>

<script type="text/javascript" src="~/js/layout/bootstrap.bundle.min.js"></script>
<script type="text/javascript" src="~/js/layout/adminlte.js"></script>
<script src="~/js/hoadon/hoadon.js"></script>
<script>
    DanhSachHoaDon();
</script>