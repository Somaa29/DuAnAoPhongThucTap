@model AppData.Entities.Models.SanPham

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>SanPham</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form action="~/Admin/SanPham/Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label for="TenSanPham" class="control-label">Tên Sản Phẩm</label>
                @Html.TextBoxFor(m => m.TenSanPham, new { @class = "form-control" })
                <span asp-validation-for="TenSanPham" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="KhoiLuong" class="control-label">Khối Lượng</label>
                @Html.TextBoxFor(m => m.KhoiLuong, new { @class = "form-control" })
                <span asp-validation-for="KhoiLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DanhSach">Back to List</a>
</div>

